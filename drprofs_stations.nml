}

spritegroup spritegroup_plain_wooden_platforms {
    loaded:  [spriteset_plain_wooden_platforms0];
    loading: [spriteset_plain_wooden_platforms0];
}


item(FEAT_STATIONS, plain_wooden_platforms) {
    property {
        class: "DPSP";
        classname: string(STR_GRF_DPSP_NAME);
        name: string(STR_NAME_PLATFORM_1);
        cargo_threshold: 160;
        // draw_pylon_tiles: bitmask(STAT_ALL_TILES);
        /* Visual effect is left at default (no effect) */
    }

    graphics {
        sprite_layouts: [wooden_platforms_X1(0), wooden_platforms_Y1(0), wooden_platforms_X2(0), wooden_platforms_Y2(0)];
        select_tile_type: 0;
        default: spriteset_plain_wooden_platforms0;
    }
}
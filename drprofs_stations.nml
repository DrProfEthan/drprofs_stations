spritelayout wooden_platforms_X1(a) {
    ground {
        sprite: 2022 + a; // prevent railtype offset
    }
    building {
        sprite: DEFAULT(0); // first sprite in active spriteset
        zextent: 36;
        recolour_mode: RECOLOUR_REMAP;
        palette:       PALETTE_USE_DEFAULT;
    }
}

spritelayout wooden_platforms_X2(a) {
    ground {
        sprite: 2022 + a; // prevent railtype offset
    }
    building {
        sprite: DEFAULT(1); // second sprite in active spriteset
        zextent: 36;
        recolour_mode: RECOLOUR_REMAP;
        palette:       PALETTE_USE_DEFAULT;
    }
}

spritelayout wooden_platforms_Y1(a) {
    ground {
        sprite: 2022 + a;
    }
    building {
        sprite: DEFAULT(2);
        zextent: 36;
        recolour_mode: RECOLOUR_REMAP;
        palette:       PALETTE_USE_DEFAULT;
    }
}

spritelayout wooden_platforms_Y2(a) {
